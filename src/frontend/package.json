{
  "name": "enterprise-docs-frontend",
  "version": "1.0.0",
  "description": "Modular Enterprise Documentation Platform Frontend",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "serve": "serve -s dist -l $PORT",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,css,md}\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test:auth-workflow": "vitest --run src/**/*auth*.test.{ts,tsx}",
    "test:components": "vitest --run src/components/**/*.test.{ts,tsx}",
    "test:performance": "vitest --run src/**/*performance*.test.{ts,tsx}",
    "test:responsive": "vitest --run src/**/*responsive*.test.{ts,tsx}",
    "test:a11y": "vitest --run src/**/*accessibility*.test.{ts,tsx}",
    "test:security": "vitest --run src/**/*security*.test.{ts,tsx}",
    "test:demo-scenarios": "playwright test --grep @demo",
    "test:demo-performance": "playwright test --grep @demo-performance",
    "test:demo-resilience": "playwright test --grep @demo-resilience",
    "test:jwt-security": "vitest --run src/**/*jwt*.test.{ts,tsx}",
    "test:e2e": "playwright test",
    "test:e2e-ui": "playwright test --ui",
    "test:mobile": "playwright test --project='Mobile Chrome'",
    "test:tablet": "playwright test --project='Tablet'",
    "test:desktop": "playwright test --project='chromium'",
    "test:all": "npm run test:coverage && npm run test:e2e"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.2",
    "@microsoft/signalr": "^7.0.14",
    "@monaco-editor/react": "^4.6.0",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@tanstack/react-query": "^4.36.1",
    "@tanstack/react-query-devtools": "^4.40.1",
    "@tanstack/react-virtual": "^3.0.0",
    "axios": "^1.6.2",
    "clsx": "^2.1.1",
    "cmdk": "^0.2.0",
    "date-fns": "^2.30.0",
    "framer-motion": "^10.16.5",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.1",
    "lucide-react": "^0.294.0",
    "monaco-editor": "^0.44.0",
    "react": "^18.2.0",
    "react-beautiful-dnd": "^13.1.1",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-hook-form": "^7.48.2",
    "react-hot-toast": "^2.4.1",
    "react-markdown": "^9.0.1",
    "react-router-dom": "^6.20.1",
    "reactflow": "^11.11.4",
    "recharts": "^3.1.0",
    "rehype-highlight": "^7.0.0",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.0",
    "serve": "^14.2.4",
    "sonner": "^1.2.4",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "vis-data": "^8.0.1",
    "vis-network": "^10.0.1",
    "zod": "^3.22.4",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.8.2",
    "@lhci/cli": "^0.12.0",
    "@playwright/test": "^1.40.0",
    "@storybook/addon-essentials": "^7.5.3",
    "@storybook/addon-interactions": "^7.5.3",
    "@storybook/addon-links": "^7.5.3",
    "@storybook/blocks": "^7.5.3",
    "@storybook/react": "^7.5.3",
    "@storybook/react-vite": "^7.5.3",
    "@storybook/testing-library": "^0.2.2",
