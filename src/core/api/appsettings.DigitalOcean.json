{
  "ConnectionStrings": {
    "DefaultConnection": "${DATABASE_URL}",
    "Redis": "${REDIS_URL}"
  },
  "Database": {
    "Provider": "PostgreSQL"
  },
  "Authentication": {
    "Issuer": "https://spaghetti-platform-drgev.ondigitalocean.app",
    "Audience": "https://spaghetti-platform-drgev.ondigitalocean.app",
    "SecretKey": "${JWT_SECRET_KEY}",
    "AccessTokenExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 30
  },
  "Storage": {
    "Provider": "${STORAGE_PROVIDER:Local}",
    "Local": {
      "BasePath": "/app/storage/uploads",
      "MaxFileSizeMB": 50
    }
  },
  "AI": {
    "Provider": "${AI_PROVIDER:Mock}",
    "OpenAI": {
      "ApiKey": "${OPENAI_API_KEY}",
      "BaseUrl": "https://api.openai.com/v1"
    },
    "Claude": {
      "ApiKey": "${CLAUDE_API_KEY}",
      "BaseUrl": "https://api.anthropic.com/v1"
    }
  },
  "Elasticsearch": {
    "Enabled": false,
    "Url": "${ELASTICSEARCH_URL}",
    "DefaultIndex": "enterprise-docs"
  },
  "Frontend": {
    "Url": "https://spaghetti-platform-drgev.ondigitalocean.app"
  },
  "MultiTenant": {
    "Enabled": true,
    "RequireHttps": true
  },
  "Security": {
    "EnableAuditLogging": true,
    "EnableDataEncryption": true,
    "EncryptionKey": "${ENCRYPTION_KEY}",
    "AllowedHosts": ["spaghetti-platform-drgev.ondigitalocean.app", "*.ondigitalocean.app"],
    "CorsOrigins": [
      "https://spaghetti-platform-drgev.ondigitalocean.app",
      "http://localhost:3000",
      "http://localhost:3001"
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.EntityFrameworkCore": "Warning",
      "System.Net.Http.HttpClient": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}