{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Port=5432;Database=enterprise_docs_dev;Username=postgres;Password=dev_password;",
    "Redis": "localhost:6379"
  },
  "Database": {
    "Provider": "PostgreSQL"
  },
  "Authentication": {
    "Issuer": "https://localhost:5000",
    "Audience": "enterprise-docs-api",
    "SecretKey": "your-super-secret-key-change-this-in-production-minimum-32-characters",
    "AccessTokenExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 30,
    "Providers": {
      "AzureAD": {
        "Enabled": false,
        "ClientId": "",
        "ClientSecret": "",
        "TenantId": ""
      },
      "Auth0": {
        "Enabled": false,
        "Domain": "",
        "ClientId": "",
        "ClientSecret": ""
      }
    }
  },
  "Storage": {
    "Provider": "Local",
    "Local": {
      "BasePath": "./storage/uploads",
      "MaxFileSizeMB": 50
    },
    "Azure": {
      "Enabled": false,
      "ConnectionString": "",
      "ContainerName": "documents"
    },
    "AWS": {
      "Enabled": false,
      "AccessKey": "",
      "SecretKey": "",
      "BucketName": "enterprise-docs",
      "Region": "us-west-2"
    }
  },
  "AI": {
    "Provider": "OpenAI",
    "OpenAI": {
      "ApiKey": "",
      "Model": "gpt-4",
      "MaxTokens": 4000
    },
    "Azure": {
      "Enabled": false,
      "Endpoint": "",
      "ApiKey": "",
      "DeploymentName": ""
    }
  },
  "Elasticsearch": {
    "Enabled": true,
    "Url": "http://localhost:9200",
    "DefaultIndex": "enterprise-docs",
    "Username": "",
    "Password": ""
  },
  "Frontend": {
    "Url": "http://localhost:3000"
  },
  "Modules": {
    "BasePath": "./modules",
    "AutoLoadEnabled": true,
    "AvailableModules": [
      "LegalDocuments",
      "ContractManagement", 
      "ComplianceTracking",
      "ReportGeneration"
    ]
  },
  "MultiTenant": {
    "Enabled": true,
    "DefaultTenant": "system",
    "TenantResolution": "Subdomain",
    "RequireHttps": false
  },
  "Security": {
    "EnableAuditLogging": true,
    "EnableDataEncryption": true,
    "EncryptionKey": "change-this-32-character-key-prod",
    "AllowedHosts": ["localhost", "*.yourdomain.com"],
    "CorsOrigins": ["http://localhost:3000", "https://localhost:3001"]
  },
  "Performance": {
    "EnableCaching": true,
    "CacheExpirationMinutes": 30,
    "EnableCompression": true,
    "EnableResponseCaching": true
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.EntityFrameworkCore": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "./logs/enterprise-docs-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  }
}